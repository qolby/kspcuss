---
const stats = [
  { value: '2014', label: 'Tahun Berdiri' },
  { value: '777+', label: 'Anggota Aktif' },
  { value: 'Rp 10 M+', label: 'Total Aset' },
  { value: '2015', label: 'Berbadan Hukum' },
];

const identity = [
  {
    label: 'Nama Lengkap',
    value: 'Koperasi Simpan Pinjam Credit Union Sinar Sejahtera',
  },
  { label: 'Singkatan', value: 'KSP CU Sinar Sejahtera' },
  { label: 'Bentuk', value: 'Koperasi Simpan Pinjam (KSP)' },
  { label: 'Wilayah Layanan', value: 'Kota Tarakan dan sekitarnya' },
  { label: 'Dasar Operasional', value: 'Prinsip dan nilai Credit Union' },
];

const legal = [
  { label: 'Status', value: 'Berbadan Hukum' },
  { label: 'Nomor Badan Hukum', value: '130-SK.02/BH/XXXIV.2/2015' },
  { label: 'Tanggal', value: '28 Februari 2015' },
  { label: 'Jaringan', value: 'Puskopdit Bekatigade Sulawesi Selatan' },
  { label: 'Bergabung Sejak', value: 'RAT 2018' },
];

const timeline = [
  {
    year: '2014',
    title: 'Pendirian',
    content:
      'KSP CU Sinar Sejahtera dibentuk pada 17 Mei 2014 di kediaman Bpk. Yulianus Bassi, S.Sos, di Jalan Juata Harapan, Tarakan Barat. Rapat pendirian dihadiri 23 orang pendiri dan didukung penuh oleh Sr. Valensia, CIJ, kepala sekolah SDK ST. Fransiskus Xaverius Juata Permai saat itu.',
  },
  {
    year: '2015',
    title: 'Badan Hukum',
    content:
      'Sejak 28 Februari 2015, KSP CU Sinar Sejahtera resmi berbadan hukum dengan nomor 130-SK.02/BH/XXXIV.2/2015.',
  },
  {
    year: '2018',
    title: 'Bergabung dengan Jaringan Nasional',
    content:
      'Pada RAT tahun 2018, koperasi bergabung bersama 12 CU/KOPDIT di bawah naungan Puskopdit Bekatigade Sulawesi Selatan yang berkantor di Makassar.',
  },
  {
    year: '2020',
    title: 'Digitalisasi Layanan',
    content:
      'KSP CU Sinar Sejahtera mulai menggunakan aplikasi SICUNDO untuk transaksi dan pembukuan, menandai langkah nyata menuju pelayanan digital bagi anggota.',
  },
  {
    year: '2024',
    title: 'Pertumbuhan Berkelanjutan',
    content:
      'Per Desember 2024, KSP CU Sinar Sejahtera telah memiliki 777 anggota dengan total aset lebih dari Rp 10 Miliar, dilayani oleh 3 kasir dan seorang petugas keamanan.',
  },
];
---

<section class="bg-neutral-50 py-16 md:py-24">
  <div class="container-content">
    <!-- Header -->
    <div class="max-w-2xl mb-12">
      <p
        class="text-sm font-semibold tracking-widest uppercase text-primary mb-4"
      >
        Profil Koperasi
      </p>
      <h2 class="text-4xl font-semibold tracking-tight text-neutral-900">
        KSP CU Sinar Sejahtera dalam angka dan sejarah.
      </h2>
    </div>

    <!-- Stat Bar -->
    <div
      class="grid grid-cols-2 md:grid-cols-4 gap-px bg-neutral-200 border border-neutral-200 rounded-2xl overflow-hidden mb-12"
    >
      {
        stats.map((stat) => (
          <div class="bg-neutral-50 px-6 py-7 text-center">
            <div class="text-3xl font-bold text-neutral-900">{stat.value}</div>
            <div class="mt-1 text-sm text-neutral-500">{stat.label}</div>
          </div>
        ))
      }
    </div>

    <!-- Identity + Legal -->
    <div class="grid md:grid-cols-2 gap-6 mb-10">
      <div class="bg-white border border-neutral-200 rounded-2xl p-8">
        <h3
          class="text-xs font-semibold tracking-widest uppercase text-neutral-400 mb-6"
        >
          Identitas Koperasi
        </h3>
        <dl class="divide-y divide-neutral-100">
          {
            identity.map((item) => (
              <div class="py-3 flex flex-col gap-0.5">
                <dt class="text-xs font-medium text-neutral-400">
                  {item.label}
                </dt>
                <dd class="text-sm text-neutral-800">{item.value}</dd>
              </div>
            ))
          }
        </dl>
      </div>

      <div class="bg-white border border-neutral-200 rounded-2xl p-8">
        <h3
          class="text-xs font-semibold tracking-widest uppercase text-neutral-400 mb-6"
        >
          Badan Hukum & Jaringan
        </h3>
        <dl class="divide-y divide-neutral-100">
          {
            legal.map((item) => (
              <div class="py-3 flex flex-col gap-0.5">
                <dt class="text-xs font-medium text-neutral-400">
                  {item.label}
                </dt>
                <dd class="text-sm text-neutral-800">{item.value}</dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>

    <!-- Timeline -->
    <div class="bg-white border border-neutral-200 rounded-2xl p-8 md:p-12">
      <h3
        class="text-xs font-semibold tracking-widest uppercase text-neutral-400 mb-10"
      >
        Sejarah Kami
      </h3>
      <div class="relative">
        <div
          class="absolute left-3 top-2 bottom-2 w-px bg-neutral-100 hidden sm:block"
        >
        </div>
        <div class="space-y-10">
          {
            timeline.map((item) => (
              <div class="sm:pl-10 relative">
                <div class="hidden sm:block absolute left-0 top-1.5 w-6 h-6 rounded-full bg-primary/10 border-4 border-white ring-1 ring-primary/30 items-center justify-center" />
                <div class="flex items-center gap-3 mb-2">
                  <span class="text-xs font-semibold uppercase tracking-widest text-neutral-400">
                    {item.year}
                  </span>
                  <h4 class="text-base font-semibold text-neutral-900">
                    {item.title}
                  </h4>
                </div>
                <p class="text-neutral-600 leading-relaxed text-sm">
                  {item.content}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
